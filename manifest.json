{
    "name": "Clear Cache",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Clear your browser cache with a single click.",
    "permissions": [
        "storage",
        "tabs",
        "browsingData"
    ],
    "action": {
        "default_title": "Clear Cache",
        "default_popup": "./popup.html",
        "default_icon": {
            "16": "./images/icon16.png",
            "32": "./images/icon32.png",
            "48": "./images/icon48.png",
            "128": "./images/icon128.png"
        }
    },
    "icons": {
        "16": "./images/icon16.png",
        "32": "./images/icon32.png",
        "48": "./images/icon48.png",
        "128": "./images/icon128.png"
    },
    "background": {
        "service_worker": "./background.js"
    }
}